<div class="row text-center vertically-spaced-md">
    <h2>New Post</h2>
</div>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <form>
          <div class="form-group">
            <label for="title">Name</label>
            {{input value=author class="form-control"}}
          </div>

          <div class="form-group">
            <label for="title">Question</label>
            {{input value=text class="form-control"}}
          </div>

          <div class="form-group">
            <label for="body">Additional information</label>
            {{textarea value=description class="form-control" rows="15"}}
          </div>

          <button class="btn btn-primary centered" {{action 'save'}}>Save</button>
        </form>
    </div>
</div>
