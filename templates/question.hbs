<div class="row move-down">
  <div class="col-md-6 col-md-offset-3 outlined">

    <p>Asked by {{author}}:</p>
    <hr>

    {{#if isEditing}}
      <form>
        <div class="form-group">
          <label for="title">Question</label>
          {{input value=text class="form-control"}}
        </div>

        <div class="form-group">
          <label for="body">More information</label>
          {{textarea value=description class="form-control" rows="15"}}
        </div>

        <button class="btn btn-primary" {{action 'save'}}>Save</button>
      </form>
    {{else}}

      <p>{{text}}</p>
      <p>{{description}}</p>

      <span class="linkify" {{action 'edit'}}>Edit</span>
    {{/if}}

    <h2>Respond to this question</h2>

    <ul id="response-list">
      {{#each answer in answers itemController="answer"}}
          <li>
            <p>
              {{answer.text}}
            </p>

            <span class="answer-author-delete">
              Answered by {{answer.author}} |
              <a href="#" {{action 'delete'}} class="delete-response">delete</a>
            </span>

          </li>
      {{/each}}
      </ul>

    <p>{{#link-to 'new-answer' this class="btn btn-primary"}}Respond{{/link-to}}</p>

    {{outlet}}

  </div>
</div>
